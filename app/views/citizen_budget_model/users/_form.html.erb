<%= form_for(@user, html: {role: 'form'}, builder: CitizenBudgetModel::CitizenBudgetFormBuilder) do |f| %>
  <%= f.errors %>
  <%= f.email_field :email %>
<% if admin? %>
  <%= f.select :organization_id, CitizenBudgetModel::Organization.all.map{|o| [o.name, o.id]}, include_blank: true %>
<% end %>
  <%= f.submit %>
<% end %>
